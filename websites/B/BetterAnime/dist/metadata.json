  "settings": [
    {
      "id": "lang",
      "multiLanguage": true
    },
    {
      "id": "privacy",
      "title": "Privacy Mode",
      "icon": "fad fa-user-secret",
      "value": false
    },
    {
      "id": "browse",
      "title": "Show Browsing Status",
      "icon": "fad fa-book-reader",
      "value": true
    },
    {
      "id": "anime",
      "title": "Show Anime",
      "icon": "fad fa-film",
      "value": true
    },
    {
      "id": "AnimeDetails",
      "if": {
        "privacy": false
      },
      "title": "Anime Details Row 1",
      "icon": "fas fa-comment-alt-edit",
      "value": "%title%",
      "placeholder": "Use %title% or %episode%"
    },
    {
      "id": "AnimeState",
      "if": {
        "privacy": false
      },
      "title": "Anime Details Row 2",
      "icon": "fas fa-comment-alt-edit",
      "value": "%episode%",
      "placeholder": "Use %title% or %episode% or {0} to delete the row completely"
    },
    {
      "id": "movie",
      "title": "Show Movies",
      "icon": "fad fa-camera-movie",
      "value": true
    },
    {
      "id": "MovieDetails",
      "if": {
        "privacy": false
      },
      "title": "Movie Details Row 1",
      "icon": "fas fa-comment-alt-edit",
      "value": "%title%",
      "placeholder": "Use %title%"
    },
    {
      "id": "MovieState",
      "if": {
        "privacy": false
      },
      "title": "Movie Details Row 2",
      "icon": "fas fa-comment-alt-edit",
      "value": "Movie",
      "placeholder": "Use %title% or {0} to delete the row completely"
    },
    {
      "id": "timestamp",
      "title": "Show Timestamps",
      "icon": "fad fa-stopwatch",
      "value": true
    },
    {
      "id": "buttons",
      "if": {
        "privacy": false
      },
      "title": "Show Buttons",
      "icon": "fas fa-compress-arrows-alt",
      "value": true
    }
  ]
}